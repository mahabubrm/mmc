@model IEnumerable<Mwc.Core.Models.Website_Notice>
@{
    ViewBag.Title = "AllForms";
    Layout = "~/Views/Shared/_publicLayout.cshtml";
}

<div class="main-content">
    <!-- Section: inner-header -->
    <section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="~/Content/web-images/bg/bg6.jpg">
        <div class="container pt-70 pbb-20">
            <!-- Section Content -->
            <div class="section-content">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h2 class="title text-white">
                            ফরম ডাউনলোড
                        </h2>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section: About -->
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p>সকল ফরম</p>
                    <table class="table table-hover">
                        <tbody>
                            @{ int row = 0;}
                            @{ 
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(row += 1)</td>
                                        <td>@item.NoticeTitle</td>
                                        <td>
                                            <a href="@Url.Action("DownloadFile","Home",new { fileName=item.NoticeAttachment})" class="btn btn-outline-success"><i class="fa fa-download"></i> Download</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

