@model IEnumerable<Mwc.Core.Models.PictureGalleryItem>
@{
    ViewBag.Title = "Acheavements";
    Layout = "~/Views/Shared/_publicLayout.cshtml";
}

<div class="main-content">
    <!-- Section: inner-header -->
    <section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="~/Content/web-images/bg/bg6.jpg">
        <div class="container pt-70 pb-20">
            <!-- Section Content -->
            <div class="section-content">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h2 class="title text-white">
                            অর্জন সমুহ
                        </h2>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section: About -->
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p>অর্জন সমুহ</p>
                    <div class="container">
                        
                        <div class="row gallery">
                            @foreach (var pic in Model)
                            {
                                <div class="col-sm-6 col-md-4 col-lg-3" style="margin-bottom:20px;">
                                    <a href="~/Attachments/PictureGallery/@pic.PictureName">
                                        <img class="img-fluid" src="~/Attachments/PictureGallery/@pic.PictureName">
                                    </a>
                                    <p>@pic.PictureTitle</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts{
    <script type="text/javascript">

        //baguetteBox.run(".gallery");

        window.addEventListener('load', function () {
            baguetteBox.run('.gallery');
        });

        $(document).ready(function () {

        });

    </script>
}

